@model Talep
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Tabela Ekle";
}

<nav aria-label="breadcrumb">
  <ol class="breadcrumb mt-4">
    <li class="breadcrumb-item"><a asp-action="Index">Tabelalar</a></li>
    <li class="breadcrumb-item active" aria-current="page">Tabela Ekle</li>
  </ol>
</nav>
<div asp-validation-summary="All" class="text-danger">

</div>
<form method="post" class="shadow p-3" asp-controller="Tabela" asp-action="Add" enctype="multipart/form-data">
    <div id="baslik" class=" text-center mt-4">
        <h1 class="lead display-5">Tabela Talep Formu</h1>
    </div>
    <div id="customer">
        <label>Tabela Yapılacak Müşteri:</label>
        <select class="form-control" asp-for="CustomerId" id="select-customer" asp-items="@(new SelectList(Model.CustomerViewModel,"Id","Name"))">
        </select>
    </div>
    <div id="brand" class="mt-1">
        <label>Tabela Yapılacak Marka:</label>
        <select class="form-control select-brand" asp-for="BrandId" asp-items="@(new SelectList(Model.Brands,"Id","Name"))">
        </select>
    </div>
    <div id="material" class="mt-1">
        <label>Tabelanın Çeşidi:</label>
        <select class="form-control select-material" asp-for="MaterialId" asp-items="@(new SelectList(Model.Materials,"Id","Name"))">
        </select>
    </div>
    <div id="images" class="mt-1">
        <label for="">Uygulama Yapılacak Alanın Fotoğrafları:</label>
        <div><input type="file" asp-for="Picture"></div>

    </div>
    <div  class="mt-1">
        <label for="">Notlar :</label>
        <textarea asp-for="Notes" id="trumbowyg-demo" rows="5" class="form-control" placeholder="Lütfen tabela ile ilgili ekstradan belirtmek istediğiniz detaylar var ise bu alana yazınız."></textarea>
    </div>
    <button type="submit" class="btn btn-success mt-3">Gönder</button>
</form>

