@model ChangeStatusDto

<div class="modal fade" tabindex="-1" role="dialog" area-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> <span class="fas fa-newspaper"></span> Statüyü Değiştir</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="İptal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="statusChangeForm" method="post" asp-action="ChangeStatus" asp-controller="Tabela">
                    <input type="hidden" asp-for="TabelaId"/>
                <div class="form-group">
                    <label>Seçilen durum :</label>
                    <select class="form-control" asp-items="@(new SelectList(Model.Statuses.Statuses,"Id","Name"))" asp-for="StatusId"></select>
                </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btnSave" type="button" class="btn btn-success" data-dismiss="modal"><span class="fas fa-save"></span> Kaydet</button>


                <button type="button" class="btn btn-danger" data-dismiss="modal"><span class="fas fa-times"></span> İptal</button>
            </div>
            
        </div>
    </div>
</div>