@model RoleListDto
@{
    Layout = "_AdminLayout";
}

<table class="table table-hover table-responsive">
    <a  class="btn btn-success mt-4 mb-2" asp-action="Add" asp-controller="Roles"><i class="fas fa-plus"></i> Rol Ekle</a>
    <thead>
        <tr>
            <th scope="col">Rol Id</th>
            <th scope="col">Rol Ad </th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Roles)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>

            </tr>
        }


</table>