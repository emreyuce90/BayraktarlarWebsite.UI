@model RoleAddViewModel
@{
    Layout = "_AdminLayout";
}

<form asp-action="Add" asp-controller="Roles" method="post" class="mt-4 w-75 mx-auto p-3 shadow">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label>Rol Adı :</label>
        <input class="form-control" asp-for="RoleName"/>
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Kaydet</button>
</form>
@section scripts{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

} 