@model SeoInfo
@{
    ViewBag.Title = "Seo Ayarları";
    Layout = "_AdminLayout";
}

<div id="modal-area"></div>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb mt-4">
        <li class="breadcrumb-item"><a asp-action="Dashboard" asp-controller="Home"><i class="fa fa-home" aria-hidden="true"></i> Ana Sayfa</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Seo Ayarları</a></li>
    </ol>
</nav>

<form method="post" class="w-75 mx-auto shadow p-3">
    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label>MenuTitle</label>
        <input asp-for="MenuTitle" class="form-control" />
        <span class="text-danger" asp-validation-for="MenuTitle"></span>
    </div>
    <div class="form-group">
        <label>SeoDescription</label>
        <input asp-for="SeoDescription" class="form-control" />
        <span class="text-danger" asp-validation-for="SeoDescription"></span>
    </div>
    <div class="form-group">
        <label>SeoTags</label>
        <input asp-for="SeoTags" class="form-control" />
        <span class="text-danger" asp-validation-for="SeoTags"></span>
    </div>
    <div class="form-group">
        <label>SeoAuthor</label>
        <input asp-for="SeoAuthor" class="form-control" />
        <span class="text-danger" asp-validation-for="SeoAuthor"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Kaydet</button>
    </div>

</form>

@section scripts{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }