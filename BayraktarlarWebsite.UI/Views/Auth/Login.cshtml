@model UserLoginViewModel
@{
    Layout = "_LoginLayout";
}

<div id="layoutAuthentication_content">
    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Giriş Yap</h3></div>
                        <div class="text-danger" asp-validation-summary="All"></div>
                        <div class="card-body">
                            <form asp-action="Login" asp-controller="Users" method="post">
                                <div class="form-group">
                                    <label class="small mb-1" for="inputEmailAddress">B2B Kodu: </label>
                                    <input asp-for="Code" autocomplete="on" class="form-control py-4" placeholder="B2B kodunuz" />
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="small mb-1" for="inputPassword">Şifreniz :</label>
                                    <input asp-for="Password" autocomplete="on" class="form-control py-4" type="password" placeholder="Şifrenizi giriniz" />
                                     <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox">
                                        <input class="custom-control-input" id="rememberPasswordCheck" type="checkbox" />
                                        <label class="custom-control-label" for="rememberPasswordCheck">Şifremi Hatırla</label>
                                    </div>
                                </div>
                                <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                    <a class="small" asp-controller="Users" asp-action="ForgotPassword"><i class="fa fa-eye" aria-hidden="true"></i> Şifremi Unuttum</a>
                                    <button type="submit" class="btn btn-primary" asp-controller="Auth" asp-action="Login"><i class="fa fa-key" aria-hidden="true"></i> Giriş Yap</button>
                                </div>
                            </form>
                        </div>
                        <div class="card-footer text-center">
                            <div class="small"><a asp-controller="Users" asp-action="Add"><i class="fa fa-user-plus" aria-hidden="true"></i> Kayıt Ol</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

