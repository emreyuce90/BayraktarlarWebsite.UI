@model UserAddViewModel
@{
    ViewBag.Title = "Kullanıcı Oluştur";

}
<div asp-validation-summary="All" class="text-danger">
</div>
<form method="post" class="shadow p-3" asp-controller="Users" asp-action="Add">
    <div id="baslik" class=" text-center mt-4">
        <h1 class="lead display-4">Kullanıcı Ekle</h1>
    </div>
    <div class="form-group">
        <label asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mobile"></label>
        <input asp-for="Mobile" class="form-control" />
        <span asp-validation-for="Mobile"></span>
    </div>
        <div class="form-group">
        <label asp-for="EntryDate"></label>
        <input asp-for="EntryDate" class="form-control" />
        <span asp-validation-for="EntryDate"></span>
    </div>
        <div class="form-group">
        <label asp-for="Picture"></label>
        <input asp-for="Profile" type="file" class="form-control" />
        <span asp-validation-for="Mobile"></span>
    </div>
    <button type="submit" class="btn btn-success mt-3"><i class="fas fa-save"></i> Kaydet</button>
    <a asp-controller="Auth" asp-action="Login" class="btn btn-warning text-white mt-3"><i class="fa fa-key" aria-hidden="true"></i> Zaten Kayıtlı Mısınız? Oturum Aç</a>

</form>