@model TicketAddDto
@{
    ViewBag.Title = "Hatırlatıcı Ekle";
    Layout = "_AdminLayout";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb mt-4">
        <li class="breadcrumb-item"><a asp-action="Dashboard" asp-controller="Home"><i class="fa fa-home" aria-hidden="true"></i> Ana Sayfa</a></li>
        <li class="breadcrumb-item"><a>Hatırlatıcı Ekle</a></li>
    </ol>
</nav>

<div asp-validation-summary="All" class="text-danger">
</div>

<form method="post" class="shadow p-3" asp-controller="Ticket" asp-action="AddTicket">
    <div id="baslik" class=" text-center mt-4">
        <h1 class="lead display-5">Hatırlatıcı Oluştur</h1>
    </div>
    <div class="form-group">
        <label>Konu :</label>
        <input class="form-control" asp-for="Subject" />
        <span class="text-danger" asp-validation-for="Subject"></span>
    </div>

    <div class="form-group">
        <label>İçerik :</label>
        <textarea asp-for="Detail" class="form-control" rows="5" cols="4"></textarea>
        <span class="text-danger" asp-validation-for="Detail"></span>
    </div>
    <div class="form-group">
        <label>Aciliyet :</label>
        <select class="form-control" asp-for="UrgencyId" id="select-customer" asp-items="@(ViewBag.Select)">
        </select>

    </div>

    <div class="form-group">
        <label>Hatırlatma Zamanı :</label>
        <input asp-for="RemainderDate" class="form-control"/>
        <span class="text-danger" asp-validation-for="RemainderDate" ></span>
    </div>
        
    <button type="submit" class="btn btn-success mt-3"><i class="fa fa-clock" aria-hidden="true"></i> Hatırlatıcı Ekle </button>
</form>

